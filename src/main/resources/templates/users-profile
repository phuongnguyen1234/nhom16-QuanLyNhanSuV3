<script>
  let thongTinNguoiDung = {};  // Biến lưu trữ thông tin người dùng

  // Khi trang được tải, gọi API để lấy thông tin người dùng
  document.addEventListener("DOMContentLoaded", function() {
    fetch("/api/hoso/thongtinnguoidung")
      .then(response => response.json())
      .then(data => {
        if (data) {
          thongTinNguoiDung = data;  // Lưu dữ liệu vào biến toàn cục
          console.log(thongTinNguoiDung); // Kiểm tra dữ liệu người dùng nhận được

          // Cập nhật các trường với thông tin người dùng
          document.getElementById('tenNhanSuOverview').textContent = data.tenNhanSu;
          document.getElementById('gioiTinhOverview').textContent = data.gioiTinh;
          document.getElementById('ngaySinhOverview').textContent = data.ngaySinh;
          document.getElementById('diaChiOverview').textContent = data.diaChi;
          document.getElementById('soDienThoaiOverview').textContent = data.soDienThoai;
          document.getElementById('emailOverview').textContent = data.email;
        } else {
          alert('Không tìm thấy thông tin người dùng.');
        }
      })
      .catch(error => {
        console.error('Có lỗi xảy ra khi lấy thông tin người dùng:', error);
        alert('Có lỗi xảy ra, vui lòng thử lại sau.');
      });
  });
</script>

