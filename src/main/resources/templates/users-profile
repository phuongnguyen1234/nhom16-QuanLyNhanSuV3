        <input name="soDienThoai" type="text" class="form-control" id="soDienThoaiEdit">
      </div>
    </div>


    <div class="text-center">
      <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
  </form>
</div>

<script>
  // Khi trang được tải, điền thông tin vào form Chỉnh sửa từ dữ liệu đã lưu trữ
  window.addEventListener('load', function() {
    if (thongTinNguoiDung) {  // Kiểm tra nếu có dữ liệu người dùng
      document.getElementById('tenNhanSuEdit').value = thongTinNguoiDung.tenNhanSu || '';
      document.getElementById('gioiTinhEdit').value = thongTinNguoiDung.gioiTinh || '';
      document.getElementById('ngaySinhEdit').value = thongTinNguoiDung.ngaySinh || '';
      document.getElementById('diaChiEdit').value = thongTinNguoiDung.diaChi || '';
      document.getElementById('soDienThoaiEdit').value = thongTinNguoiDung.soDienThoai || '';
      document.getElementById('emailEdit').value = thongTinNguoiDung.email || ''; // Email là trường chỉ đọc
    }
  });

  // Xử lý sự kiện submit form để cập nhật thông tin
  document.getElementById("editProfileForm").addEventListener("submit", function(event) {
    event.preventDefault();

    const formData = new FormData(this);
    const nhanSuData = {
      tenNhanSu: formData.get("tenNhanSu"),
      gioiTinh: formData.get("gioiTinh"),
      ngaySinh: formData.get("ngaySinh"),
      diaChi: formData.get("diaChi"),
      soDienThoai: formData.get("soDienThoai"),
      email: formData.get("email")
    };

    // Gửi yêu cầu PUT để cập nhật thông tin
    fetch("/api/hoso/capnhat", {
      method: "PUT",
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify(nhanSuData)
    })
    .then(response => {
      if (response.ok) {
        return response.json();
      } else {
        throw new Error('Cập nhật không thành công');
      }
    })
    .then(updatedData => {
      console.log("Cập nhật thành công:", updatedData);
      alert("Cập nhật thành công!");
    })
    .catch(error => {
      console.error(error);
      alert("Cập nhật không thành công.");
    });
  });
</script>





